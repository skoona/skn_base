# ./Gemfile

source "https://rubygems.org"

ruby "2.4.1"

# Web framework: Core
gem "puma"
gem "roda"

# Web framework: Html
gem "tilt"
gem "erubis"
gem "builder"

# General Utilities
gem 'skn_utils'

# Persistence
gem 'pg'
gem 'rom'
gem 'rom-sql'

# Web Security
gem "rack-protection"
gem "rack_csrf"
gem "bcrypt"

group :development do
  gem 'pry-byebug'
  gem "racksh"
  gem 'rubocop'
  gem 'rake'
end

group :test do
  gem 'rspec'
  gem 'simplecov'
  gem "rom-factory"
end
