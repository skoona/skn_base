<%# Roda flash messages styled for Bootstrap 3.0 %>
<section>
  <% flash.each_pair do |name, msg| %>
    <%# puts "HELP FLASH=#{name}:#{msg.class.name}:#{msg}" %>
    <% if msg.is_a?(String) %>
      <div class="col-md-12">
        <div class="alert alert-<%= name.to_s %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <div id="flash_<%= name %>"><%= msg %></div>
        </div>
      </div>
    <% elsif msg.is_a?(Array) %>
      <% rflag = msg.size > 1 %>
      <% msg.flatten.each_with_index do |m,i| %>
          <div class="<%= rflag ? 'col-md-6' : 'col-md-12' %>">
              <div class="alert alert-<%= name.to_s %>">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <div id="flash_<%= name.to_s + i.to_s %>"><%= m %></div>
              </div>
          </div>
      <% end %>
    <% end %>
  <% end %>
</section>